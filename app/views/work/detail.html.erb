<% title @work.title %>
<% meta_tag :description, @work.seo_description %>


<nav aria-label="breadcrumb" class = "breadcrumbs__container">
  <ol class="list-inline breadcrumbs">
     <li class="list-inline-item"><a class = "breadcrumbs__link" href="/work">Work</a></li>&bull;
    <% if @parent != "case" %><li class="list-inline-item"><a class = "breadcrumbs__link" href="/work/<%= @parent   %>"><%= @parent.gsub!("-"," ") %></a></li>&bull;<% end %>
    <li class="list-inline-item" aria-current="page"><span class = "breadcrumbs__link"><%= @work.title %></span></li>
  </ol>
</nav>

<h1><%= @work.title %></h1>

<% if @work.video_banner != "" %>
     <div class="embed-responsive embed-responsive-21by9 mb-3">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= get_youtube_id(@work.video_banner) %>?rel=0&amp;showinfo=0"></iframe>
    </div>
<% else %>
    <% if @work.banner_image != "" %>
        <div class = "page-banner" style = "background-image:url(<%= @work.banner_image %>)"> </div>
    <% end %>
<% end %>
</div>
<div class = 'content-container'>

  <div class = "row">
    <div class = "col-md-8 pr-5">
      <div class = "description  mt-1">
        <%= raw @work.about_body %>
      </div>
    </div>
    <div class = "col-sm-4 border__gray--left">
        <% if @work.partners != "" %>

            <h3 class = "mb-3 mt-1 mont-bold">Partners</h3>
            <div class = "description--partners">
              <%== @work.partners%>
            </div>
        <% end %>

        <% if @work.files.length > 0 %>
            <h3 class = "mb-3 mt-5 mont-bold">Filings</h3>

            <div class = "">
                <div class=" full-width">
                    <% @work.files.each do |file| %>
                            <a href="<%= file.file %>" class="sidebar__file">
                                <h5 class="sidebar__file-title"><%= file.file_title %></h5>
                                <p class="sidebar__file-text"><%= file.description %> </p>
                            </a>
                    <% end %>
                </div>
            </div>
        <% end %>

        <% if @work.media_coverage.length > 0 %>
            <h3 class = "mb-3 mt-5 mont-bold">Media Coverage</h3>

            <% @work.media_coverage.each do |media| %>

                <h5 class="sidebar__media"> <a target="_blank" href="<%= media.article_source_link %>"><%= media.article_title %></a></h5>

            <% end %>

        <% end %>
    </div>
</div>
