<% title 'Our Artists and Residents Work' %>

<h1>Gallery</h1>
</div>
<div class = 'content-container content-container--black close-to-footer '>
<h4 class="text-center">Artwork by Jesse Krimes and Alana Roth</h4>
<div class="content">
  <div class = "slider-for">
    <% @gallery.gallery.each do |image| %>
      <div>
        <img class = "img-fluid" src = "<%= image.gallery_image %>"/>
        <h6 class = "float-right art-byline">by <%= image.artist %></h6>
      </div>
    <% end %>
  </div>
  <div class = "slider-nav">
    <% @gallery.gallery.each do |image| %>
      <div>
        <img class = "img-fluid" src = "<%= image.gallery_image %>"/>
      </div>
    <% end %>
  </div>

  <hr class = "mt-5"/>
  <div class = "mt-5 mb-5">
    <h1 class = "mt-3 mb-2 mont-bold">Poems</h1>
    <h4 class="">Poetry by Randall Horton and Reginald Dwayne Betts</h4>
    <div class = "row">
      <% @poems.poems.each do |poem| %>
      <div class = "col-sm-6">
        <a class = "btn full-width mt-4" href = "/gallery/<%= poem.slug%>"><%= poem.title %></a>
      </div>
      <% end %>
    </div>
  </div>

</div>
<%= javascript_include_tag 'slick.js', 'gallery-init.js'%>
