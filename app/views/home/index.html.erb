<div class = "banner banner--shadow">
  <div class = "banner__image" style = "background-image:url(<%= @bannerimage %>)"></div>
  <div class = "banner__text text-center">
      <h2>Leaders in landmark litigation and high-impact advocacy that empowers communities to change the unjust legal system.
        <div class = "banner__buttons">
          <a href = "/donate" class = "btn mt-5">Take Action</a>
        </div>
      </h2>
  </div>
  <div class = "banner__arrow">
    <%= image_tag("down-arrow.png") %>
  </div>
</div>


<div class = "featured__container">
  <div class = "triangle triangle--top"></div>
  <div class = "featured__block">
      <% @featured.each do |item| %>

         <% if @featured.count % 2 == 1 %>
              <div class = "case ">

                  <div class = "case__details">
                      <h5 class = "case__type">Featured</h5>
                      <h2 class = "case__title">
                          <% if item.alternate_title == "" %>
                              <%= item.case.fields.title %>
                          <% else %>
                              <%= item.alternate_title %>
                          <% end %>
                      </h2>
                      <p class = "case__description">
                          <% if item.alternate_summary == "" %>
                              <%= item.case.fields.summary %>
                          <% else %>
                              <%= item.alternate_summary %>
                          <% end %>
                      </p>
                      <a href = "/work/case/<%= item.case.slug %>" class = "case__link">More&nbsp;<i class="fas fa-caret-right"></i></a>
                  </div>
                  <div class = "featured__image">
                  </div>
              </div>
          <% end %>
      <% end %>
  </div>
  <div class = "triangle triangle--bottom"></div>
</div>


