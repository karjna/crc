<h1>Media</h1>
<div class = "description">
<%== @description%>
</div>

<div class = "row">
    <% @videos.video.each do |video| %>       
        <div class = "col-sm-6">
            <div class="embed-responsive embed-responsive-16by9 mb-3">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= get_youtube_id(video.youtube_link) %>?rel=0&amp;controls=0&amp;showinfo=0"></iframe>
            </div>
            <h3><%= video.title %></h3>
            <h5><% if (video.source)%><%== video.source %><% end %></h5>
            
             <% clean = strip_tags(video.description)%>
            <p><%= truncate( clean, :length => 350 ) %></p>
        </div>
    <% end %>
</div>

<h2 class = "display-4  mt-5 text-uppercase text-center abel">Media Coverage</h2>
<% @coverage.media_coverage.each do |media| %>
    <div class = "my-5">
        <h3><%= media.title %></h3>
        <h5><a href = "<%= media.source_url %>" target="_blank"><%= media.author %>, <%= media.source_name %></a></h5>
        <p><%== media.summary %></p>
        <a href = "<%= media.source_url %>" target = "_blank">Read the Full Story</a>
    </div>
<% end %>