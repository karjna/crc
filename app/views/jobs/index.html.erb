<h1>Join Our Team</h1>

 <% @sorted.job_listings.each do |job| %>
    <div class = "row">
       
        <div class = "col-sm-8">
            <h3><%= job.job_title %></h3>
            <% if job.job_summary != "" %>
                <p class="card-text"><%= job.job_summary %></p>
            <% else %>
                <% clean = strip_tags(job.job_description)%>
                <p class="card-text"><%= truncate( clean, :length => 460 ) %></p>
            <% end %>
            <a href = "" class = "btn btn-outline-primary">Learn More</a>
        </div>
    </div>
<% end %>
