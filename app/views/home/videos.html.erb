    
<% title 'Videos' %>


<div class = "slider-for">
    <% @videos.each do |video| %>  
            
        <div class = "">
            <div class="embed-responsive embed-responsive-21by9 mb-3">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= get_youtube_id(video.youtube_link) %>?rel=0&amp;showinfo=0"></iframe>
            </div>
            <h3><%= video.title %></h3>
            <h5><% if (video.source)%><%== video.source %><% end %></h5> 
            <% clean = strip_tags(video.description)%>
            <p><%= truncate( clean, :length => 350 ) %></p>
        </div>

    <% end %>
</div>
<div class = "slider-nav">
    <% @videos.each do |video| %>  
        
        <div class = "">                                                  
            <div class = "image"> 
                <img class = "img-fluid" src = "https://img.youtube.com/vi/<%= get_youtube_id(video.youtube_link) %>/hqdefault.jpg">
            </div>
            <h4><%= video.title %></h4>

        </div>
    <% end %>
</div>



<%= javascript_include_tag 'slick.js', 'slick-init.js'%>