
<div class="card mb-3">
    <!-- Featured image -->
  <%= image_tag(post.featured_image, :class => "card-img-top") if post.featured_image %>
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, buttercms_post_path(post.slug), :title => post.title %></h5>
    <p class = "card-text">  by <%= link_to "#{post.author.first_name} #{post.author.last_name}", buttercms_author_path(post.author.slug) %></p>
    <p class="card-text"><%= post.summary %></p>
    <p class="card-text">
      <small class="text-muted">
        <% post.categories.each do |category| %>
          <%= link_to category.name, buttercms_category_path(category.slug), :title => category.name %>
        <% end %>
      </small>
    </p>
  </div>
</div>
