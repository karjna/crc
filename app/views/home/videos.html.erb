
<% title 'Videos' %>

<h1>Videos</h1>
</div>

<div class = 'content-container content-container--long-text'>
<div class = "slider-for d-none d-sm-block">
    <% @videos.each do |video| %>

        <div class = "">
            <div class="embed-responsive embed-responsive-16by9 mb-3">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= get_youtube_id(video.youtube_link) %>?rel=0&amp;showinfo=0"></iframe>
            </div>
            <h3 class = "video__title"><%= video.title %></h3>
            <h5 class = "video__source"><% if (video.source)%><%== video.source %><% end %></h5>
            <% clean = strip_tags(video.description)%>
            <p><%= truncate( clean, :length => 350 ) %></p>
        </div>

    <% end %>
</div>
<div class = "slider-nav">
    <% @videos.each do |video| %>

        <div class = "">
            <div class = "image">
              <div data-toggle="modal" data-target="#<%= get_youtube_id(video.youtube_link) %>" class = "video__image video__image--small" style = "background-image: url(https://img.youtube.com/vi/<%= get_youtube_id(video.youtube_link) %>/hqdefault.jpg)"></div>
            </div>
            <h4 class = "video__title mt-2"><%= video.title %></h4>
            <% clean = strip_tags(video.description)%>
            <p class="d-sm-none"><%= truncate( clean, :length => 350 ) %></p>
        </div>
    <% end %>
</div>



<%= javascript_include_tag 'slick.js', 'slick-init.js'%>
