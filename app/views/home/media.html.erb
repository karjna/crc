<h1> Media</h1>
<div class = " description">
<%== @description%>
</div>

<div class = "row">
    <% @videos.video.each do |video| %>       
        <div class = "col-sm-6">
            <div class="embed-responsive embed-responsive-16by9 mb-3">
                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= get_youtube_id(video.youtube_link) %>?rel=0&amp;controls=0&amp;showinfo=0"></iframe>
            </div>
            <h3><%= video.title %></h3>
            <h5><% if (video.source)%><%== video.source %><% end %></h5>
            <p><%== video.description %></p>
          
        </div>
    <% end %>
</div>

<h2>Media Coverage</h2>
<% @coverage.media_coverage.each do |media| %>
    <div class = "my-5">
        <h3><%= media.title %></h3>
        <h5><%= media.author %>, <%= media.source_name %></h5>
        <p><%== media.summary %></p>
        <a href = "<%= media.source_url %>" target = "_blank">Read the Full Story</a>
    </div>
<% end %>